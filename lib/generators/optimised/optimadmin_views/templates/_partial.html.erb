<%% present <%= singular_table_name %> do |<%= singular_table_name %>_presenter| %>
  <div class="row collapse module-list-index <%%= cycle('odd', 'even') %>"
       data-equalizer="module-list" id="item-<%%= <%= singular_table_name %>.id %>">

    <% if orderable? %>
    <div class="large-1 hide-for-medium-down columns" data-equalizer-watch="module-list">
      <span class="drag-helper"></span>
    </div>
    <% end %>

    <div class="large-<%= title_large_columns_number %> small-8 columns"
       data-equalizer-watch="module-list">
      <%%= <%= singular_table_name %>_presenter.toggle_title %>
    </div>

    <% if has_image? %>
    <div class="large-2 hide-for-medium-down columns" data-equalizer-watch="module-list">
      <%%= <%= singular_table_name %>_presenter.edit_image(:<%= image_name %>) %>
    </div>
    <% end %>

    <div class="large-1 small-4 columns" data-equalizer-watch="module-list">
      <%%= <%= singular_table_name %>_presenter.toggle_link %>
    </div>

    <div class="large-1 small-4 columns" data-equalizer-watch="module-list">
      <%%= <%= singular_table_name %>_presenter.view_link %>
    </div>

    <div class="large-1 small-4 columns" data-equalizer-watch="module-list">
      <%%= <%= singular_table_name %>_presenter.edit_link %>
    </div>

    <div class="large-1 hide-for-medium-down columns last" data-equalizer-watch="module-list">
      <%%= <%= singular_table_name %>_presenter.delete_link %>
    </div>

    <div class="row module-list-detail hide" id="index-list-<%%= <%= singular_table_name %>_presenter.id %>">
      <div class="small-12 columns module-list-summary last">
        <%%= <%= singular_table_name %>_presenter.optimadmin_summary %>
      </div>
    </div>
  </div>
<%% end %>
